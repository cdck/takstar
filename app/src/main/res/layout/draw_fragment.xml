<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/dialog_full_holo_light"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#4D4D4D">

        <LinearLayout
            android:id="@+id/tool_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_exit" />

            <ImageView
                android:id="@+id/iv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_save" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_clear" />

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_picture" />

            <ImageView
                android:id="@+id/iv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_text" />

            <ImageView
                android:id="@+id/iv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_color" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_back" />

            <ImageView
                android:id="@+id/iv_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_round" />

            <ImageView
                android:id="@+id/iv_rect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_rect" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_line" />

            <ImageView
                android:id="@+id/iv_sline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_sline" />

            <ImageView
                android:id="@+id/iv_paint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_paint" />

            <ImageView
                android:id="@+id/iv_eraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_eraser" />

            <ImageView
                android:id="@+id/iv_drag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_drag" />

            <ImageView
                android:id="@+id/iv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/ic_draw_size" />

            <ImageView
                android:id="@+id/iv_annotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/draw_tool_status"
                android:src="@drawable/draw_annotation_selected" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/draw_root"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>