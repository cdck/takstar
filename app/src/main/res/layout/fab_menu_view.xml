    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_centerInParent="true"-->
    <!--        android:visibility="gone" />-->

    <xlk.takstar.paperless.ui.CustomMenu
        android:id="@+id/custom_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:colorPressed="#CC00FCA8"
        app:colorUnPressed="#CC1E5787"
        app:count="8"
        app:spacingAngle="2" />

    <xlk.takstar.paperless.ui.CircleMenuLayout
        android:id="@+id/circle_menu_layout"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_menu_bg">

        <RelativeLayout
            android:id="@id/id_circle_menu_item_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/menu_back_status"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white" />
        </RelativeLayout>
    </xlk.takstar.paperless.ui.CircleMenuLayout>
</RelativeLayout>