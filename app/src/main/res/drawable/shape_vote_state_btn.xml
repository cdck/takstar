<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="25dp" />
            <solid android:color="@color/blue" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="25dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="@color/blue" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="25dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="@color/devline" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>