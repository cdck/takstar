<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_color_enabled_f" />
            <size android:width="60dp" android:height="25dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_bg_selected" />
            <size android:width="60dp" android:height="25dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_bg_pressed" />
            <size android:width="60dp" android:height="25dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_bg_normal" />
            <size android:width="60dp" android:height="25dp" />
            <stroke android:width="0.5dp" android:color="@color/btn_bg_pressed" />
        </shape>
    </item>
</selector>